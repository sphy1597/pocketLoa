<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.PocketLoa.NoActionBar">


    <HorizontalScrollView
        android:id="@+id/scrollview_auction"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center">


            <Button
                android:id="@+id/btn_accessories"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@color/pastel_green"
                android:text="악세"
                android:textSize="23dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_bracelet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/pastel_green"
                android:text="팔찌"
                android:textSize="23dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_amulet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@color/pastel_green"
                android:padding="0dp"
                android:text="아뮬렛"
                android:textSize="23sp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/btn_engravingbook"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@color/pastel_green"
                android:padding="0dp"
                android:text="각인서"
                android:textSize="23dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@color/pastel_green"
                android:padding="0dp"
                android:text="아바타"
                android:textSize="23dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_upgradeitem"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@color/pastel_green"
                android:text="재료"
                android:textSize="23dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_battleitem"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/pastel_green"
                android:text="배템"
                android:textSize="23dp"
                android:textStyle="bold" />

        </GridLayout>


    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/frame_auction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/scrollview_auction"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>