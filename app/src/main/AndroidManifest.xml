<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PocketLoa"
        tools:targetApi="31">
        <activity
            android:name=".view.auction.AuctionSelectActivity"
            android:exported="false" />
        <!-- Auction Search Result RV Activity -->
        <activity
            android:name=".view.auction.AuctionRVActivity"
            android:exported="true">

        </activity>
        <!-- Intro, splash -->
        <activity
            android:name=".view.intro.IntroActivity"
            android:exported="true"
            android:theme="@style/Theme.PocketLoa.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Main Activity -->
        <activity
            android:name=".view.MainActivity"
            android:exported="true" />
    </application>

</manifest>